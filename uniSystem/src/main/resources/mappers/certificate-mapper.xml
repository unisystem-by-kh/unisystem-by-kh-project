<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="certificateMapper">

	<resultMap type="Certificate" id="certificate_rm">
		
		<id property="fileNo" column="FILE_NO"/>
		<result property="filePath" column="FILE_PATH"/>
		<result property="fileName" column="FILE_NAME"/>
		<result property="fileRename" column="FILE_RENAME"/>
		<result property="fkindNo" column="FKIND_NO"/>
		<result property="memberNo" column="MEMBER_NO"/>
		
	</resultMap>
	
	
	<!-- 증명서 삽입 여부 조회 -->
	<select id="selectCertificateCount" resultType="_int">
		
		SELECT COUNT(*)
		FROM FILEZIP
		WHERE MEMBER_NO = #{memberNo}
		AND FKIND_NO = #{fkindNo}
	
	</select>
	
	
	<!-- 증명서 인서트 -->
	<insert id="insertCertificate">
		INSERT INTO FILEZIP
		VALUES (SEQ_FILE_NO.NEXTVAL,
		 #{filePath},
		  #{fileName},
		   #{fileRename},
		    #{fkindNo},
		    #{memberNo},
		    null)
	</insert>
	
	<!-- 증명서 정보 조회 -->
	<select id="selectCertificate" resultMap="certificate_rm">
		
		SELECT  
		FILE_NO, FKIND_NO,
		FILE_PATH||FILE_RENAME AS FILE_PATH, FILE_NAME
		FROM FILEZIP
		WHERE MEMBER_NO = #{memberNo}
		AND FKIND_NO = #{fkindNo}
	
	</select>
	
	<update id="updateCertificate">
	
		UPDATE FILEZIP
		SET FILE_NAME = #{fileName}
		,FILE_RENAME = #{fileRename}
		
		WHERE MEMBER_NO = #{memberNo}
		AND FKIND_NO = #{fkindNo}
	
	</update>

	

</mapper>
